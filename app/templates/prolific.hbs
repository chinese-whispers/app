{{document-title title="Prolific Academic"}}
{{page-header title="Prolific Academic"}}

{{#page-body}}
  {{#if session.isAuthenticated}}
    <p>You're signed in as <strong>{{currentUser.username}}</strong>. Sign out first!</p>
    {{async-button action="logout" class="btn btn-primary" default="Sign out" pending="Signing you out..."}}
  {{else}}
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <h1>Welcome to Gistr!</h1>
        <p>Before we start, <strong>please enter your Prolific Academic ID</strong></p>
      </div>
    </div>

    <form class="form-horizontal">

      <div class="form-group {{if errors.prolificId 'has-error'}}">
        <label for="inputProlificId" class="col-sm-3 control-label">Prolific Academic ID</label>
        <div class="col-sm-6">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-barcode"></span></span>
            {{focused-input id="inputProlificId" class="form-control" value=prolificId disabled=isWorking placeholder='e.g. 5381d3c8717b341db325eec3'}}
          </div>
          <span class="help-block">{{errors.prolificId}}</span>
        </div>
      </div>

      <div class="form-group {{if errors.non_field_errors 'has-error'}}">
        <div class="col-sm-offset-3 col-sm-6">
          <p>You will now be taken to a registration page; <strong>simply follow the steps presented to get started with the experiment</strong>.</p>
          <span class="help-block">{{errors.non_field_errors}}</span>
          <button class="btn btn-primary" {{action "saveProlificId"}}>Take me to registration</button>
        </div>
      </div>

    </form>
  {{/if}}
{{/page-body}}
