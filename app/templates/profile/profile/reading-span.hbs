<h2 class="row">
  <div class="col-xs-8"><span id="reading-span-title">Reading-span test</span></div>
  <div class="col-xs-4"><small id="reading-span-progress">
    Trial {{trial}} out of {{shaping.readingSpanTrialsCount}}
    {{sl-progress-bar value=testProgress striped=true}}
  </small></div>
</h2>

<div class="well">
  {{#if isInInstructions}}
    {{reading-span-instructions
        next="read"}}

  {{else if isInReading}}
    {{reading-span-read
        words=trialWords
        next="distract"}}

  {{else if isInDistracting}}
    {{reading-span-distract
        next="write"}}

  {{else if isInWriting}}
    {{reading-span-write
        save="processWords"}}

  {{else if isInFinished}}
    {{reading-span-finished
        span=span}}

  {{/if}}
</div>
