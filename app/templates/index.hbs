{{document-title title="Home"}}

<div class="row">
  <div class="col-xs-9 col-xs-offset-2 col-sm-10 col-sm-offset-1">

    {{#if session.isAuthenticated}}
      <div class="icon-big pull-right">{{#link-to 'profile'}}<span class="glyphicon glyphicon-user"></span>{{/link-to}}</div>
    {{/if}}

  </div>
</div>


{{#page-body class="center"}}
  <h1>Gistr</h1>
  <p>A {{#sl-tooltip title="Game With a Purpose"}}<strong>GWAP</strong>{{/sl-tooltip}} on Interpretation</p>

  <div class="greeting">
    {{#if session.isWorking}}
      <p>Loading...</p>
    {{else}}
      {{#if session.isAuthenticated}}
        <p>Howdy, <strong>{{currentUser.username}}</strong></p>
      {{else}}
        {{link-to 'Sign in' 'login' class="btn btn-default"}}
        {{link-to 'Sign up' 'register' class="btn btn-primary"}}
      {{/if}}
    {{/if}}
  </div>
{{/page-body}}

{{#page-body class="center"}}
  <div class="row">

    <div class="col-xs-6 col-sm-3">
      {{link-to 'Play' 'play' class="btn-home btn btn-lg btn-success"}}
    </div>
    <div class="col-xs-6 col-sm-3">
      {{#link-to 'suggest' class="btn-home btn btn-lg btn-success"}}New <span class="badge">{{#if currentUser.isStaff}}staff{{else}}{{currentProfile.suggestionCredit}}{{/if}}</span>{{/link-to}}
    </div>
    <div class="col-xs-6 col-sm-3">
      {{#sl-tooltip title="Nothing for now!"}}<a href="#" class="btn-home btn btn-lg btn-info">Like</a>{{/sl-tooltip}}
    </div>
    <div class="col-xs-6 col-sm-3">
      {{link-to 'About' 'about' class="btn-home btn btn-lg btn-info"}}
    </div>

  </div>
{{/page-body}}
