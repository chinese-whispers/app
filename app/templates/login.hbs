<div class="row">

  <div class="col-xs-2 col-sm-1">
    <div class="pull-right icon-big">{{#link-to 'index'}}<span class="glyphicon glyphicon-menu-left"></span>{{/link-to}}</div>
  </div>

  <div class="col-xs-9 col-sm-10">
    <h2 class="page-title">Sign in</h2>
  </div>

</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    {{#if session.isAuthenticated}}
      <p>Signed in as <strong>{{currentUser.username}}</strong>.</p>
      {{active-button class="btn btn-primary" action="logout" active=session.isWorking activeText="Signing you out..." inactiveText="Sign out"}}
    {{else}}

      <form class="form-horizontal" {{action "login" on="submit"}}>

        <div {{bind-attr class=':form-group errors.username:has-error'}}>
          <label for="inputUsername" class="col-sm-2 control-label">Username</label>
          <div class="col-sm-10">
            {{view focused-textfield id="inputUsername" class="form-control" value=username disabled=session.isWorking placeholder='e.g. joey'}}
            <span class="help-block">{{errors.username}}</span>
          </div>
        </div>

        <div {{bind-attr class=':form-group errors.password:has-error'}}>
          <label for="inputPassword" class="col-sm-2 control-label">Password</label>
          <div class="col-sm-10">
            {{input id="inputPassword" class="form-control" type='password' value=password disabled=session.isWorking placeholder='Elaborate password'}}
            <span class="help-block">{{errors.password}}</span>
          </div>
        </div>

        <div {{bind-attr class=':form-group errors.non_field_errors:has-error'}}>
          <div class="col-sm-offset-2 col-sm-10">
            <span class="help-block">{{errors.non_field_errors}}</span>
            {{active-input type='submit' class="btn btn-default" active=session.isWorking activeValue='Signing you in...' inactiveValue='Sign in'}}
          </div>
        </div>

      </form>

    {{/if}}

  </div>
</div>
