{{document-title title="New"}}
{{#page-header}}
  Suggest new text <small>credits {{credit-badge}}</small>
{{/page-header}}

{{#page-body}}
  {{#if isInSuggesting}}
    {{suggest-write next="verify"}}
  {{else if isInVerified}}
    <p>That's recorded.</p>

    {{#if currentUser.isStaff}}
      <button class="btn btn-default" {{action 'suggest'}}>Suggest again</button>
    {{else}}

      {{#if (can 'create sentences')}}
        <button class="btn btn-default" {{action 'suggest'}}>Suggest again {{credit-badge}}</button>
      {{else}}
        <p>You have no credit left to suggest new texts! {{link-to 'Interpret' 'play'}} a few texts to get more credit.</p>
      {{/if}}

    {{/if}}

    {{link-to 'Play' 'play' class="btn btn-primary"}}
  {{/if}}
{{/page-body}}
