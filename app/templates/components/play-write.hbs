<h3>Write down the sentence as you remember it</h3>

<form>

  {{nlp-textarea
      value=text
      error=errors.text
      inputId="inputText"
      disabled=isUploading
      info="updateMetaText"
      }}

  {{#if enoughTokens}}
    {{#if isLanguageMismatch}}
      <p>This looks like <strong>{{guessedLanguageLabel}}</strong>, but you should be writing in <strong>{{parentLanguageLabel}}</strong>! &mdash; <button class="btn btn-default" {{action "manuallySetLanguage"}}>No, it's <strong>{{parentLanguageLabel}}</strong></button></p>
    {{/if}}
  {{/if}}

  <div class="form-group {{if errors.non_field_errors 'has-error'}}">
    <span class="help-block">{{errors.non_field_errors}}</span>
    {{#if enoughTokens}}
      {{#progress-clock value=progress}}
        {{#if isLanguageMismatch}}
          {{input type='submit' class="btn btn-primary" disabled="true" value="Continue"}}
        {{else}}
          {{async-button action="upload" class="btn btn-primary" default="Continue" pending="Uploading..."}}
        {{/if}}
      {{/progress-clock}}
    {{else}}
      {{#progress-clock value=progress}}{{input type='submit' class="btn btn-primary" disabled="true" value="Continue"}}{{/progress-clock}} Type at least {{#unless text}}{{minTokens}}{{else}}{{tokensLeft}} more{{/unless}} words
    {{/if}}
  </div>

</form>
