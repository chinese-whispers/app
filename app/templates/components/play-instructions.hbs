{{#if showInstructions}}
  {{lifecycle-intro-js
      getExpSteps=expIntroSteps
      getPlayingSteps=playingIntroSteps
      start-if=true
      on-change="introChange"
      on-complete="introDone"
      on-exit="introDone"}}
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="instructions-drawing">
        {{#each images as |image|}}
          <img
              class="{{if image.hidden 'hidden'}}"
              id="instruction-{{image.name}}"
              src="assets/images/play/{{image.name}}.png"
              title="{{image.title}}" />
        {{/each}}
      </div>
    </div>
  </div>
  <div class="center">
    {{#sl-tooltip title="Press Enter!"}}<button class="btn btn-primary" {{action "next"}}>Start</button>{{/sl-tooltip}}
  </div>
{{else}}
  <h1>Ready to go?</h1>
  <button class="btn btn-default" {{action "showInstructions"}}>Read instructions again</button>
  {{#sl-tooltip title="Press Enter!"}}<button class="btn btn-primary" {{action "next"}}>Start</button>{{/sl-tooltip}}
{{/if}}{{! showInstructions }}
