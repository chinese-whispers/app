{{document-title title="Sign up"}}
{{page-header title="Sign up"}}

{{#page-body}}
  {{#if session.isAuthenticated}}
    <p>You're signed in as <strong>{{currentUser.username}}</strong>. Sign out first!</p>
    {{async-button action="logout" class="btn btn-primary" default="Sign out" pending="Signing you out..."}}
  {{else}}
    <div class="row">
      <div class="col-sm-6 col-sm-offset-2">
        {{#if isProlific}}
          {{#sl-alert theme="info"}}
            <h2>Thanks for setting your ID.</h2>
            <p>Now please sign up to start the experiment.</p>
            {{! TODO: add clearing possibility }}
          {{/sl-alert}}
        {{else}}
          {{#sl-alert theme="warning" dismissable=true}}
            <h2><strong>Prolific Academic participant?</strong></h2>
            <h2>Please {{link-to 'enter your ID' 'prolific'}} first.</h2>
          {{/sl-alert}}
          {{#sl-alert theme="info"}}Already have an account? {{link-to 'Sign in here' 'login'}}{{/sl-alert}}
        {{/if}}
      </div>
    </div>

    <form class="form-horizontal">

      <div class="form-group {{if errors.username 'has-error'}}">
        <label for="inputUsername" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-6">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            {{focused-input id="inputUsername" class="form-control" value=username disabled=isRegistering placeholder='e.g. joey'}}
          </div>
          <span class="help-block">{{errors.username}}</span>
        </div>
      </div>

      <div class="form-group {{if errors.email 'has-error'}}">
        <label for="inputEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-6">
          <div class="input-group">
            <span class="input-group-addon">{{#sl-tooltip title="Only used to reset a lost password"}}<span class="glyphicon glyphicon-envelope"></span>{{/sl-tooltip}}</span>
            {{input type="email" id="inputEmail" class="form-control" placeholder="Optional" value=email disabled=isRegistering}}
          </div>
          <span class="help-block">{{errors.email}}</span>
        </div>
      </div>

      <div class="form-group {{if errors.password1 'has-error'}}">
        <label for="inputPassword1" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-6">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
            {{input id="inputPassword1" class="form-control" type='password' value=password1 disabled=isRegistering placeholder='Elaborate password'}}
          </div>
          <span class="help-block">{{errors.password1}}</span>
        </div>
      </div>

      <div class="form-group {{if errors.password2 'has-error'}}">
        <label for="inputPassword2" class="col-sm-2 control-label">Confirm password</label>
        <div class="col-sm-6">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
            {{input id="inputPassword2" class="form-control" type='password' value=password2 disabled=isRegistering placeholder='Same old, same old'}}
          </div>
          <span class="help-block">{{errors.password2}}</span>
        </div>
      </div>

      <div class="form-group {{if errors.__all__ 'has-error'}} {{if errors.non_field_errors 'has-error'}}">
        <div class="col-sm-offset-2 col-sm-10">
          <span class="help-block">{{errors.__all__}}</span>
          <span class="help-block">{{errors.non_field_errors}}</span>
          {{async-button action="register" class="btn btn-default" default="Sign up" pending="Signing you up..."}}
        </div>
      </div>

    </form>

  {{/if}}
{{/page-body}}
